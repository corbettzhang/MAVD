<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" styleClass="parent" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fx:id="conventionHBox" alignment="CENTER" focusTraversable="true" layoutX="7.0" layoutY="14.0" onMouseClicked="#conventionHBoxMouseClicked" prefHeight="30.0" prefWidth="190.0">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <FontAwesomeIconView focusTraversable="true" glyphName="COG">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </FontAwesomeIconView>
        <Label text="%General" />
    </HBox>
    <HBox fx:id="networkHBox" alignment="CENTER" focusTraversable="true" layoutX="206.0" layoutY="14.0" onMouseClicked="#networkHBoxMouseClicked" prefHeight="30.0" prefWidth="190.0">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
        <FontAwesomeIconView focusTraversable="true" glyphName="CHROME">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </FontAwesomeIconView>
        <Label text="%Network" />
    </HBox>
   <HBox fx:id="shortcutsHBox" alignment="CENTER" focusTraversable="true" layoutX="405.0" layoutY="14.0" onMouseClicked="#shortcutsHBoxMouseClicked" prefHeight="30.0" prefWidth="190.0">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <children>
         <FontAwesomeIconView focusTraversable="true" glyphName="ELLIPSIS_H">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </FontAwesomeIconView>
         <Label text="%Shortcut" />
      </children>
   </HBox>
    <ScrollPane fx:id="conventionPane" hbarPolicy="NEVER" layoutY="60.0" prefHeight="330.0" prefWidth="600.0" style="-fx-background-color: #fff;">
        <Pane focusTraversable="true" prefHeight="325.0" prefWidth="600.0" style="-fx-background-color: #fff;">
            <Label alignment="CENTER_RIGHT" layoutX="132.0" layoutY="20.0" prefHeight="30.0" prefWidth="90.0" text="%BackgroundTheme">
                <font>
                    <Font name="Yuanti SC Light" size="13.0" />
                </font>
            </Label>
            <JFXRadioButton fx:id="lightness" layoutX="272.0" layoutY="20.0" prefHeight="30.0" prefWidth="90.0" text="%Light" />
            <JFXRadioButton fx:id="darkness" layoutX="272.0" layoutY="50.0" prefHeight="30.0" prefWidth="90.0" text="%Dark" />
            <JFXRadioButton fx:id="auto" layoutX="272.0" layoutY="80.0" prefHeight="30.0" prefWidth="90.0" text="%Auto" />
         <Label alignment="CENTER_RIGHT" layoutX="132.0" layoutY="130.0" prefHeight="30.0" prefWidth="90.0" text="%GeneralSetting">
            <font>
               <Font name="Yuanti SC Light" size="13.0" />
            </font>
         </Label>
         <JFXCheckBox fx:id="enableNotification" checkedColor="#cd813b" layoutX="272.0" layoutY="130.0" onAction="#enableNotificationAction" prefHeight="30.0" prefWidth="90.0" text="%EnableTheSystemNotification" />
            <Label alignment="CENTER_RIGHT" layoutX="132.0" layoutY="180.0" prefHeight="30.0" prefWidth="90.0" text="%Upgrade">
                <font>
                    <Font name="Yuanti SC Light" size="13.0" />
                </font>
            </Label>
         <ComboBox fx:id="update" layoutX="272.0" layoutY="180.0" onAction="#updateAction" prefWidth="120.0" />
        </Pane>
    </ScrollPane>
   <ScrollPane fx:id="shortcutsPane" hbarPolicy="NEVER" layoutY="60.0" prefHeight="330.0" prefWidth="600.0" style="-fx-background-color: #fff;" visible="false">
      <content>
         <Pane focusTraversable="true" prefHeight="325.0" prefWidth="600.0" style="-fx-background-color: #fff;">
            <children>
               <Label alignment="CENTER_RIGHT" layoutX="132.0" layoutY="20.0" prefHeight="30.0" prefWidth="90.0" text="%ShortcutSetting">
                  <font>
                     <Font name="Yuanti SC Light" size="13.0" />
                  </font>
               </Label>
               <JFXCheckBox fx:id="enableShortcuts" checkedColor="#cd813b" layoutX="272.0" layoutY="20.0" onAction="#enableShortcutsAction" prefHeight="30.0" prefWidth="90.0" text="%EnableTheSystemShortcut" />
            </children>
         </Pane>
      </content>
   </ScrollPane>
    <Pane fx:id="networkPane" layoutY="60.0" prefHeight="330.0" prefWidth="600.0" style="-fx-background-color: #fff;" visible="false">
        <Label alignment="CENTER_RIGHT" layoutX="132.0" layoutY="21.0" prefHeight="30.0" prefWidth="90.0" text="%ProxySetting">
            <font>
                <Font name="Yuanti SC Light" size="13.0" />
            </font>
        </Label>
        <JFXRadioButton fx:id="useProxyRadioButton" focusTraversable="false" layoutX="272.0" layoutY="21.0" onAction="#useProxyRadioButtonAction" prefHeight="30.0" prefWidth="90.0" text="%EnableProxy" />
        <JFXRadioButton fx:id="unusedProxyRadioButton" focusTraversable="false" layoutX="272.0" layoutY="51.0" onAction="#unusedProxyRadioButtonAction" prefHeight="30.0" prefWidth="90.0" text="%DisableProxy" />
        <Pane fx:id="proxySetting" layoutY="92.0" prefHeight="260.0" prefWidth="600.0" style="-fx-background-color: #fff;">
            <Label alignment="CENTER_RIGHT" layoutX="210.0" layoutY="14.0" prefHeight="30.0" prefWidth="90.0" text="%ProxyType">
                <font>
                    <Font name="Yuanti SC Light" size="13.0" />
                </font>
            </Label>
            <Label alignment="CENTER_RIGHT" layoutX="210.0" layoutY="44.0" prefHeight="30.0" prefWidth="90.0" text="%ProxyAddress">
                <font>
                    <Font name="Yuanti SC Light" size="13.0" />
                </font>
            </Label>
            <Label alignment="CENTER_RIGHT" layoutX="210.0" layoutY="74.0" prefHeight="30.0" prefWidth="90.0" text="%ProxyPort">
                <font>
                    <Font name="Yuanti SC Light" size="13.0" />
                </font>
            </Label>
            <JFXButton fx:id="testConnect" focusTraversable="false" layoutX="278.0" layoutY="130.0" onAction="#testConnectOnAction" text="%ProxyTestConnection" />
            <JFXButton fx:id="saveProxy" focusTraversable="false" layoutX="374.0" layoutY="130.0" onAction="#saveProxyOnAction" text="%ProxySave" />
            <JFXTextField fx:id="proxyAddress" layoutX="313.0" layoutY="46.0" />
            <JFXTextField fx:id="proxyPort" layoutX="313.0" layoutY="76.0" />
         <ComboBox fx:id="proxyType" layoutX="313.0" layoutY="16.0" visibleRowCount="3" />
        </Pane>
    </Pane>
    <HBox fx:id="message" alignment="CENTER" layoutX="250.0" layoutY="140.0" opacity="0.63" style="-fx-background-color: #111; -fx-background-radius: 10px;" visible="false">
        <FontAwesomeIconView fx:id="fontAwesomeIcon" glyphName="FILE">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></FontAwesomeIconView>
        <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" text="设置已更新">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></Label>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </HBox>
</Pane>
